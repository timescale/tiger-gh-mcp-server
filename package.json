{
  "name": "@tigerdata/tiger-gh-mcp-server",
  "version": "0.1.0",
  "description": "MCP server to pull status from GitHub",
  "license": "UNLICENSED",
  "author": "TigerData",
  "homepage": "https://tigerdata.com",
  "type": "module",
  "bin": {
    "tiger-gh-mcp-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "watch:http": "tsx watch src/index.ts http",
    "start": "node dist/index.js stdio",
    "start:http": "node dist/index.js http",
    "inspector": "npx @modelcontextprotocol/inspector"
  },
  "dependencies": {
    "@octokit/plugin-throttling": "^11.0.1",
    "@octokit/rest": "^22.0.0",
    "@tigerdata/mcp-boilerplate": "^0.4.0",
    "dotenv": "^17.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.16.4",
    "ai": "^5.0.17",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  }
}
